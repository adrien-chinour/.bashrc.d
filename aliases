# Listing
alias ll="exa -l"
alias la="exa -la"
alias l="ls"

# Divers
alias reset="source ~/.bashrc"

# Docker Compose
alias dcd="docker-compose down"
alias dcu="docker-compose up -d"
alias dc="docker-compose"

# Docker
alias dkc="docker container"
alias dki="docker image"
alias dkv="docker volume"
alias dkn="docker network"

# Git
alias gs="git status"
alias gl="git log --graph --decorate --oneline --all"
alias gc="git remote prune origin && git fetch -p && for branch in `git branch -vv | grep ': disparue]' | awk '{print $1}'`; do git branch -D $branch; done"
